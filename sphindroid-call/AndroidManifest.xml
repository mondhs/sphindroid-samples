<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sphindroid.sample.call"
    android:versionCode="1"
    android:versionName="1.0-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name=".CallActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:process="@string/sphindroid_process_name" -->
        <service
            android:name=".service.aidl.SphindroidService"
            android:icon="@drawable/ic_launcher"
            android:label="@string/sphindroidService" >
        </service>
        <!-- Service to perform web API queries -->
	        
        <service android:name="org.sphindroid.sample.call.widget.SphindroidWidgetIntentReceiver$InvokeService" />

        <receiver
            android:name="org.sphindroid.sample.call.widget.SphindroidWidgetProvider"
            android:icon="@drawable/ic_launcher"
            android:label="Sphindroid Widget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sphindroid_widget_info" />
        </receiver>
        
        <receiver
            android:name="org.sphindroid.sample.call.widget.SphindroidWidgetIntentReceiver"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="org.sphindroid.sample.call.SWICH_WIDGET" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/sphindroid_widget_info" />
        </receiver>

    </application>

</manifest>